{% extends 'baseLogin.html.twig' %}

{% block title %}Inicio de sesión
{% endblock %}


{% block body %}
<form action="{{ path('app_login') }}" method="post" class="col-12 col-md-8 offset-md-2">
	<div class="row mb-5">
		<h2 class="col-12 text-center">Iniciar sesión</h2>
	</div>
	<div class="row">  
		
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
			<div class="form-group">
				<input type="email" value="{{ last_username }}" class="form-control" name="_username" id="inputEmail" placeholder="Correo electrónico" autocomplete="email" required >
			</div>
			<div class="form-group">
				<input type="password" class="form-control" name="_password" id="inputPassword" autocomplete="current-password" placeholder="Contraseña" required>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			</div>
			<div class="form-group text-center pt-4">
				<input type="submit" class="btn btn-lg btn-primary" value="Ingresar">  
			</div>
		</form>
	</div>
	<div class="row mt-5">
		<div class="col-12 links text-center">
			<div>
				<a href="{{ path('app_forgot_password_request')}} ">Olvide mi contraseña</a>
			</div>
			<div>
				<a href="{{ path('app_register')}} ">Crear cuenta</a>
			</div>  
			                   
		</div>
	</div>

		
