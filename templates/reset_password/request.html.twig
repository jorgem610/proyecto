{% extends 'baseLogin.html.twig' %}

{% block title %}Restablecer la contraseña{% endblock %}

{% block body %}
    <div class="row mb-5">
		<h2 class="col-12 text-center">Restablecer la contraseña</h2>
	</div>
    <div class="row">
    {# {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %} #}
  
        {{ form_start(requestForm, {'attr': {'class': 'col-12 col-md-8 offset-md-2'}}) }}
            <div class="form-group">
            {{ form_row(requestForm.email) }}
            </div>
            <div>
                <small>
                    Introduzca su dirección de correo electrónico y le enviaremos un enlace para restablecer su contraseña..
                </small>
            </div>
            <div class="form-group text-center pt-4">
                <button class="btn btn-lg btn-primary">Enviar</button>
            </div>
        
        {{ form_end(requestForm) }}
    </div>
    <div class="row mt-5">
		<div class="col-12 links text-center">
			<a href="{{ path('app_login')}} ">Volver</a>
		</div>
	</div>
{% endblock %}
